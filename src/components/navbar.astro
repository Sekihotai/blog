---
const {color = "black", color2 = "white"} = Astro.props;
---

<style define:vars={{color, color2}}>
@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700&display=swap');
  /* Reset default margin and padding for the header and body */
  header {
    margin: 0;
    padding: 0;
  }

  body {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
  }

  /* Style the header */
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: var(--color);
    height: 70px;
    padding: 0 20px
  }

  a {
    color: var(--color2);
    font-family: 'Noto Sans JP', sans-serif;
    text-decoration: none;
    font-weight: bold;
    
  }

  #logo {
    width: 50px;
    height: 50px
  }

  .links {
    display: flex;
    flex-direction: row;
    gap: 30px
  }
</style>

<div class="header-container">
  <div class="links">
    <a href="/">home</a>
    <a href="/about">about</a>
    <a href="/posts">posts</a> 
  </div>
    
</div>
